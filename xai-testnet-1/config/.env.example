# XAI Testnet Environment Configuration
# Copy this file to ~/.xai/config/.env and customize

# Network selection (mainnet|testnet|devnet)
XAI_NETWORK=testnet

# Node identity (customize this)
XAI_NODE_NAME=my-xai-node

# P2P Configuration
XAI_P2P_PORT=8333
XAI_P2P_SEEDS=54.39.129.11:8333,139.99.149.160:8333
XAI_P2P_MAX_PEERS=125

# RPC Configuration
XAI_RPC_ENABLED=true
XAI_RPC_PORT=8545
XAI_RPC_HOST=0.0.0.0

# WebSocket Configuration
XAI_WS_ENABLED=true
XAI_WS_PORT=8765
XAI_WS_HOST=0.0.0.0

# Mining Configuration (set to true if you want to mine)
XAI_MINING_ENABLED=false
XAI_MINING_ADDRESS=

# Database Configuration
XAI_DATA_DIR=~/.xai/data
XAI_DB_BACKEND=leveldb

# Logging Configuration
XAI_LOG_LEVEL=info
XAI_LOG_FORMAT=json
XAI_LOG_FILE=~/.xai/logs/node.log

# Performance Tuning
XAI_CACHE_SIZE_MB=512
XAI_MAX_PENDING_TXS=5000
XAI_BLOCK_CACHE_SIZE=100

# Metrics (Prometheus)
XAI_METRICS_ENABLED=true
XAI_METRICS_PORT=9100

# Security
XAI_RPC_CORS_ORIGINS=*
XAI_RPC_RATE_LIMIT=100
