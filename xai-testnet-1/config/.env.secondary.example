# XAI Testnet Secondary Node Configuration
# For validator-only (non-mining) nodes that sync from the primary

# Network selection
XAI_NETWORK=testnet

# Node identity
XAI_NODE_NAME=xai-secondary

# P2P Configuration
XAI_P2P_PORT=8766
XAI_P2P_BOOTSTRAP_NODES=ws://54.39.129.11:8333

# RPC Configuration (offset from primary)
XAI_RPC_ENABLED=true
XAI_RPC_PORT=8546
XAI_RPC_HOST=0.0.0.0

# WebSocket Configuration
XAI_WS_ENABLED=true
XAI_WS_PORT=8767
XAI_WS_HOST=0.0.0.0

# Mining disabled for secondary
XAI_MINING_ENABLED=false

# Database Configuration
XAI_DATA_DIR=/opt/xai-secondary/data
XAI_DB_BACKEND=leveldb

# Logging Configuration
XAI_LOG_LEVEL=DEBUG
XAI_LOG_FORMAT=json
XAI_LOG_FILE=/opt/xai-secondary/logs/node.log

# Sync Configuration
# Enable relaxed difficulty validation for testnet sync
# This allows syncing historical blocks where difficulty may differ
XAI_RELAX_DIFFICULTY_VALIDATION=1
XAI_PARTIAL_SYNC_ENABLED=1

# Primary node peer for syncing
XAI_PEERS=http://54.39.129.11:8545
